<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>br.gov.mec.aghu-core</groupId>
  <artifactId>aghu-core-security</artifactId>
  <version>8.4</version>
  <!-- buscar por '<aghu-core-security.versao>' para atualizar a dependencias -->

  <parent>
    <groupId>br.gov.mec</groupId>
    <artifactId>aghu-core</artifactId>
    <version>3.0</version>
  </parent>

	<name>core-security: JAR Module</name>

	<properties>
   		<apache-commons-lang.versao>3.3.2</apache-commons-lang.versao>
		<apache-commons-logging.versao>1.2</apache-commons-logging.versao>
		<apache-commons-beanutils.versao>1.9.2</apache-commons-beanutils.versao>
		<version.picketbox>4.0.21.Beta1</version.picketbox>
	</properties>
  
  <dependencies>
  		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>${apache-commons-logging.versao}</version>
			<scope>compile</scope> 
		</dependency>
		
		<dependency>
        	<groupId>org.picketbox</groupId>
        	<artifactId>picketbox</artifactId>
        	<version>${version.picketbox}</version>
        	<scope>provided</scope>
        </dependency>
        
        <dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
			<version>${apache-commons-lang.versao}</version>
			<scope>compile</scope>
		</dependency>
		
  </dependencies>

	<profiles>

		<profile>
			<id>copy</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										 <delete>
										 	<fileset dir="${basedir}/../../aghu_jee/aghu/aghu-ear/src/main/config-outside/moduloseguranca/br/gov/mec/aghu/security/main" 
										 		includes="aghu-core-security-*.jar"
										 	/>
										 </delete>
										<copy overwrite="true" todir="${basedir}/../../aghu_jee/aghu/aghu-ear/src/main/config-outside/moduloseguranca/br/gov/mec/aghu/security/main">
											<fileset file="${basedir}/target/aghu-core-security-${project.version}.jar" />
										</copy>	
										
										
										<filterset id="security.params.module">
											<filter token="security.version-jar" value="${project.version}" />
                                        </filterset>
										<copy overwrite="true" file="${basedir}/src/main/config-outside/module.xml"
											tofile="${basedir}/../../aghu_jee/aghu/aghu-ear/src/main/config-outside/moduloseguranca/br/gov/mec/aghu/security/main/module.xml">
											<filterset refid="security.params.module" />
										</copy> 									
										
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>			
	
	</profiles>

</project>
