<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
   
  <artifactId>aghu-prescricaomedica-service-client</artifactId>
  
 <parent>
  <groupId>br.gov.mec</groupId>
		<artifactId>aghu</artifactId>
		<version>7.31-STABLE</version>
	</parent>
  
  <name>prescricaomedica-service-client: JAR Module</name>
  <description>Servicos expostos do modulo de prescricaomedica-service do aghu</description>
  
   <properties>
    <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
  
    <!-- scope: provided, compile, runtime, test, system -->
  <dependencies>
	  	<dependency>
			<groupId>br.gov.mec.aghu-core</groupId>
			<artifactId>aghu-core-service</artifactId>
			<version>${aghu-core-service.versao}</version>
		</dependency>
	  	<dependency>
	  		<groupId>org.jboss.spec.javax.ejb</groupId>
        	<artifactId>jboss-ejb-api_3.1_spec</artifactId>
        	<version>1.0.2.Final</version>
        	<scope>provided</scope>
        </dependency>
        
        <dependency>
        	<groupId>br.gov.mec</groupId>
        	<artifactId>aghu-vo</artifactId>
        	<version>${project.version}</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
		
  </dependencies>
  
  <build>
  		<plugins>
  		 <plugin>
        		<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>check</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<targetJdk>1.7</targetJdk>
					<sourceEncoding>UTF-8</sourceEncoding>
					<threadCount>100</threadCount>
					<minimumPriority>${minimumPriority}</minimumPriority>
					<rulesets>
						<ruleset>../.ruleset.xml</ruleset>
					</rulesets>
					<excludes>
                        <exclude>**/test/**</exclude>
                        <exclude>**/main/filters/**</exclude>
                        <exclude>**/main/resources/**</exclude>
                    </excludes>
                    <excludeRoots>
                        <excludeRoot>target</excludeRoot>
                    </excludeRoots>
				</configuration>
			</plugin>
  		</plugins>
  		
  		<pluginManagement>
  			<plugins>
  				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
  				<plugin>
  					<groupId>org.eclipse.m2e</groupId>
  					<artifactId>lifecycle-mapping</artifactId>
  					<version>1.0.0</version>
  					<configuration>
  						<lifecycleMappingMetadata>
  							<pluginExecutions>
  								<pluginExecution>
  									<pluginExecutionFilter>
  										<groupId>
  											org.apache.maven.plugins
  										</groupId>
  										<artifactId>
  											maven-pmd-plugin
  										</artifactId>
  										<versionRange>
  											[2.6,)
  										</versionRange>
  										<goals>
  											<goal>check</goal>
  										</goals>
  									</pluginExecutionFilter>
  									<action>
  										<ignore></ignore>
  									</action>
  								</pluginExecution>
  							</pluginExecutions>
  						</lifecycleMappingMetadata>
  					</configuration>
  				</plugin>
  			</plugins>
  		</pluginManagement>
  </build>
 
  
</project>