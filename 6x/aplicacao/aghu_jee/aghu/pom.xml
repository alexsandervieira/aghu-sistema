					<configuration>
						<skip>false</skip>
						<source>${maven.compiler.source}</source>
						<target>${maven.compiler.target}</target>
					</configuration>
				</plugin>
						
				<!-- The JBoss AS plugin deploys your ear to a local JBoss AS container -->
